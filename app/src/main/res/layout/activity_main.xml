<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#20B2AA"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tvP1Score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:freezesText="true"
            android:text="Player 1: 0"
            android:textColor="#ffffff"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tvP2Score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvP1Score"
            android:textColor="#ffffff"
            android:freezesText="true"
            android:text="Player 2: 0"
            android:textSize="30sp" />
    </RelativeLayout>


    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/box_00"
                android:layout_width="80dp"
                android:background="#E0E0E0"
                android:layout_height="80dp"
                android:layout_marginBottom="3dp"
                android:layout_marginRight="3dp"
                android:freezesText="true"
                android:textSize="50sp" />

            <Button
                android:id="@+id/box_01"
                android:layout_width="80dp"
                android:background="#E0E0E0"
                android:layout_height="80dp"
                android:layout_marginBottom="3dp"
                android:layout_marginRight="3dp"
                android:freezesText="true"
                android:textSize="50sp" />

            <Button
                android:id="@+id/box_02"
                android:layout_width="80dp"
                android:background="#E0E0E0"
                android:layout_height="80dp"
                android:layout_marginBottom="3dp"

                android:freezesText="true"
                android:textSize="50sp"

                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/box_10"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="3dp"
                android:layout_marginRight="3dp"
                android:freezesText="true"
                android:textSize="50sp" />

            <Button
                android:id="@+id/box_11"
                android:layout_width="80dp"
                android:background="#E0E0E0"
                android:layout_height="80dp"
                android:layout_marginBottom="3dp"
                android:layout_marginRight="3dp"
                android:freezesText="true"
                android:textSize="50sp" />

            <Button
                android:id="@+id/box_12"
                android:layout_width="80dp"
                android:background="#E0E0E0"
                android:layout_height="80dp"
                android:layout_marginBottom="3dp"
                android:freezesText="true"
                android:textSize="50sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/box_20"
                android:layout_width="80dp"
                android:background="#E0E0E0"
                android:layout_height="80dp"
                android:layout_marginRight="3dp"

                android:freezesText="true"
                android:textSize="50sp" />

            <Button
                android:id="@+id/box_21"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="#E0E0E0"
                android:layout_marginRight="3dp"
                android:freezesText="true"
                android:textSize="50sp" />

            <Button
                android:id="@+id/box_22"
                android:layout_width="80dp"
                android:background="#E0E0E0"
                android:layout_height="80dp"
                android:freezesText="true"
                android:textSize="50sp" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/btnReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:background="@color/colorPrimaryDark"
        android:text="RESET"

        />


</RelativeLayout>
